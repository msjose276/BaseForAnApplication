<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Login"
    android:background="@color/blue1"

    >

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >

        <EditText
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/ET_email"
            android:hint="email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textAlignment="center"
            android:background="@drawable/item_card_border_square"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ET_email"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ET_password"
            android:background="@drawable/item_card_border_square"
            android:hint="palavra-passe"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="criar conta"
            android:textSize="20dp"
            android:id="@+id/TV_register"
            android:layout_below="@+id/ET_password"
            android:onClick="register"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/TV_enter"
            android:layout_width="@dimen/dimension_100"
            android:layout_height="@dimen/dimension_50"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dimension_10"
            android:layout_marginTop="0dp"
            android:text="Login"
            android:textSize="@dimen/dimension_20"
            android:layout_below="@+id/TV_register"
            android:onClick="enter"
            android:textColor="@color/black"
            android:background="@drawable/item_card_border"
            android:textAlignment="center"
            />


    </RelativeLayout>

</RelativeLayout>