<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_200"
        android:id="@+id/iv_item_image"
        android:src="@drawable/bonita"
        android:layout_margin="0dp"
        />

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Romanos"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:layout_below="@+id/iv_item_image"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ferdinand"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:layout_below="@+id/tv_brand"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,450kz"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>